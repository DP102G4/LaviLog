<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    tools:context=".admAddFragment" >

    <EditText
        android:id="@+id/etAdmAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="輸入帳號"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAdmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="輸入名字"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/etAdmPassword"
        app:layout_constraintTop_toBottomOf="@+id/etAdmRePassword" />

    <EditText
        android:id="@+id/etAdmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="輸入密碼"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/etAdmAccount"
        app:layout_constraintTop_toBottomOf="@+id/etAdmAccount" />

    <TextView
        android:id="@+id/tvAdmAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/etAdmAccount"
        app:layout_constraintTop_toBottomOf="@+id/etAdmAccount" />

    <TextView
        android:id="@+id/tvAdmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/etAdmRePassword"
        app:layout_constraintTop_toBottomOf="@+id/etAdmRePassword" />

    <TextView
        android:id="@+id/tvAdmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/etAdmName"
        app:layout_constraintTop_toBottomOf="@+id/etAdmName" />

    <Button
        android:id="@+id/btAdmAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:background="#C2FCE3"
        android:text="確認新增"
        app:layout_constraintStart_toEndOf="@+id/btAdmBack"
        app:layout_constraintTop_toTopOf="@+id/btAdmBack" />

    <Button
        android:id="@+id/btAdmBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#C2FCE3"
        android:text="返回"
        app:layout_constraintStart_toStartOf="@+id/etAdmName"
        app:layout_constraintTop_toBottomOf="@+id/etAdmName" />

    <EditText
        android:id="@+id/etAdmRePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="再次輸入密碼"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/etAdmPassword"
        app:layout_constraintTop_toBottomOf="@+id/etAdmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>